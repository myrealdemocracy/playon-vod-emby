<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="log/${shortdate}-nlog-internal.log" >
  <extensions>
    <add assembly="NLog.Extended" />
  </extensions>
  <targets>
    <target name="console" xsi:type="ColoredConsole" layout="${date:format=HH\:mm\:ss}|${level}|${stacktrace}|${message}" />
    <target name="csv" xsi:type="File" fileName="log/${shortdate}.csv" layout="${message}" />
    <target name="file" xsi:type="File" fileName="log/${shortdate}-${uppercase:${level}}.log" layout="${message}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="console,file" />
  </rules>
</nlog>